<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="googletask"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="googletaskapi">
		<!-- Comment this in for Things which need a Bridge to function.
			<supported-bridge-type-refs>
			<bridge-type-ref id="GoogleTaskBridge" />
			</supported-bridge-type-refs>
		-->

		<label>Google Task API Binding Thing</label>
		<description>API for GoogleTask Binding</description>

		<channels>
			<channel id="gettasks" typeId="gettasks-channel"/>
			<channel id="addtasks" typeId="addtasks-channel"/>
		</channels>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<context>network-address</context>
				<label>Hostname</label>
				<description>Hostname of local authorization server</description>
			</parameter>
			<parameter name="port" type="integer" required="true">
				<context>port</context>
				<label>Port</label>
				<description>Port of local authorization server</description>
			</parameter>
			<parameter name="taskListID" type="text" required="true">
				<label>Google Task List ID</label>
				<description>Google Task List ID</description>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="gettasks-channel">
		<item-type>String:Tasks</item-type>
		<label>Task of User</label><!-- Use uppercase words, except prepositions. 2-3 words, max 25 chars -->
		<description>Google Task API Get Tasks channel for GoogleTask Binding</description>
	</channel-type>
</thing:thing-descriptions>
